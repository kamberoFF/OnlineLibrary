@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row align-items-center mb-5">
        <div class="col-md-6">
            <h1 class="display-4 fw-bold">Welcome to the Online Library</h1>
            <p class="lead">Discover thousands of books and manage your reading journey all in one place.</p>
            <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                <a asp-controller="Book" asp-action="Catalog" class="btn btn-primary btn-lg px-4 me-md-2">Browse Books</a>
                @if (!User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Account" asp-action="Register" class="btn btn-outline-secondary btn-lg px-4">Sign Up</a>
                }
            </div>
        </div>
        <div class="col-md-6">
            <div class="text-center">
                <i class="bi bi-book" style="font-size: 12rem; color: #6f42c1;"></i>
            </div>
        </div>
    </div>

    <hr class="my-5" />

    <div class="row g-4 py-5">
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-search mb-3" style="font-size: 3rem; color: #6f42c1;"></i>
                    <h3>Browse Books</h3>
                    <p>Explore our extensive collection of books across various genres. Find your next favorite read!</p>
                    <div class="d-grid">
                        <a asp-controller="Book" asp-action="Catalog" class="btn btn-outline-primary">View Catalog</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-journal-bookmark mb-3" style="font-size: 3rem; color: #6f42c1;"></i>
                    <h3>Borrow Books</h3>
                    <p>Borrow books with just a few clicks. Keep track of your borrowings and return dates.</p>
                    <div class="d-grid">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-primary">My Dashboard</a>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary">Login to Borrow</a>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-star mb-3" style="font-size: 3rem; color: #6f42c1;"></i>
                    <h3>Rate & Review</h3>
                    <p>Share your thoughts on books you've read. Help other readers discover great books!</p>
                    <div class="d-grid">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-primary">My Reviews</a>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary">Join Now</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>