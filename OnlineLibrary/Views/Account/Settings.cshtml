@using OnlineLibrary.ViewModels.Account
@model AccountSettingsViewModel
@{
    ViewData["Title"] = "Account Settings";
}

<div class="container">
    <h1 class="mb-4">Account Settings</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <partial name="_AccountForm" model="Model.UpdateAccountViewModel" />
            <partial name="_PasswordForm" model="Model.ChangePasswordViewModel" />
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Account Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-primary">View Dashboard</a>
                        <a asp-controller="Book" asp-action="Catalog" class="btn btn-outline-secondary">Browse Books</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}