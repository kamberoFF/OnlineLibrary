{
  "ConnectionStrings": {
    //Modify the connection string to point to your SQL Server instance
    "DefaultConnection": "Server=(localdb)\\MSSQLLocalDB;Database=OnlineLibraryDB;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  // Modify the EmailSettings section to point to your SMTP server
  "EmailSettings": {
    "FromEmail": "your-service-email",
    "Host": "smtp.your-server.com",
    "Port": 587,
    "Username": "your-username",
    "Password": "your-password",
    "EnableSsl": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*"
}